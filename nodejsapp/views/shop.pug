extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if products.length > 0
                .grid
                    each product in products
                        article.card.product-item
                            header.card__header
                                h1.product__title #{product.title}
                            .card__image 
                                img(src="https://images-na.ssl-images-amazon.com/images/I/41J6Qjnn60L._SX311_BO1,204,203,200_.jpg", alt="A random book")
                            .card__content 
                                h2.product__price R$20,00
                                p.product__description A very interesting book about so many things 
                            .card__actions
                                button.btn Add to Cart
        else 
            h1 No products for now